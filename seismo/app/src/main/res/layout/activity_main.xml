<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piafichtl.seismo.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="384dp"
        android:layout_height="78dp"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/texture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextureView
        android:id="@+id/texture"
        android:layout_width="185dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="42dp"
        app:layout_constraintBottom_toTopOf="@+id/camgraph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graph" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/camgraph"
        android:layout_width="384dp"
        android:layout_height="55dp"
        android:layout_marginBottom="195dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texture"
        tools:layout_constraintTop_toBottomOf="@+id/texture"
        tools:layout_marginTop="40dp" />


</android.support.constraint.ConstraintLayout>
